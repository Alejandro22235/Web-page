<body class="m-2 row justify-content-center bg-dark">
  <div class="col-auto bg-dark p-5 text-center text-white">
    <h1><%= @article.title %></h1>

    <p><%= @article.body %></p>

    <ul>
      <li><%= link_to "Edit", edit_article_path(@article), class: "text-white" %></li>
      <li><%= link_to "Destroy", article_path(@article), data: {
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure?"
                      }, class: "text-white" %></li>
    </ul>
  </div>
</body>